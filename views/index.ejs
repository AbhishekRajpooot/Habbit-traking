<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habbit Tracking App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>Habit Tracker</h1>
<form class="form-inline" action="/add-habbit" method="post">
    <div class="form-group mx-sm-3 mb-2">
        <label for="habbit_name" class="sr-only">Enter Habit</label>
        <input type="text" name="name" class="form-control" id="habbit_name" placeholder="Type habit">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Add Habit</button>
</form>

   
    <table class="table table-dark">
        <thead>
          <tr>
            
            <th scope="col">Hobby Name</th>
            <th scope="col">Streak</th>
            <th scope="col">Max Streak </th>
          </tr>
        </thead>
        <tbody>
         
      
    <% habbits.forEach(h => { %>
        <tr>
            
            <td><a href="/habbits/<%=h._id%>/<%=todayDate%>"><%=h.name%></a></td>
            <td><%=h.streak%></td>
            <td><%=h.maxStreak%></td>
          </tr>
        
    <% }) %>
</tbody>
</table>
</body>
</html>
